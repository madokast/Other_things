

#include<stdio.h>

int main(void)
{
    int x;
    char c;

    int scanfReturn=0;

    int i;
    for(i=0;i<10;i++){
        scanfReturn=scanf("%d",&x);

        printf("return is %d\n",scanfReturn);
    }

    return 0;
}

